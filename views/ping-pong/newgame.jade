extends ../layout

block content
  .header
    .title
      h1 Galvanize Ping Pong
    .user-info
      form.logout(action="/logout", method="post")
        input.logout(type="submit", value="Logout")
  .currentgames
    .left
      .row
        h3= data.person1
    .middle
      .row
        h3 Vs
    .right
      .row
        h3= data.person2
    
    .results
      .row
        form(action="/results/" + data._id, method="post")
          input(type="hidden", name="person1", value=data.person1)
          input(type="hidden", name="person2", value=data.person2)
          input(type="hidden", name="mode", value=data.mode)
          input(type="hidden", name="type", value=data.type)
          input(type="hidden", name="games", value=data.games)
          input(type="hidden", name="points", value=data.points)
          p Who won?
          p #{data.person1}
          
            input(type="radio", name="winner", value=data.person1, required)
            span         
            input(type="radio", name="winner", value=data.person2)
            span #{data.person2}
          input.finish(type="submit", value="Finish Game")
  .row 
    p
    a(href="/") << Back to Games!
          
